<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 50%;
}

td, th {
    border: 1px;
    text-align: left;
    padding: 4px;
    margin:4px;
}


</style>
</head>
<body>

<table>
  <tr>
    <th>Book Name</th>
    <th>Author Name</th>
    <th>Category</th> 
    <th>SSN</th>
    <th>Id</th>
    
  </tr>
  
    {% for c in db %}
        <tr>
            <td>{{ c.name }}</td>
            <td>{{ c.author }}</td>
            <td>{{ c.cat }}</td>
            <td>{{ c.sSN }}</td>
            <td>{{ c.id }}</td>
            
            <button type="button" onclick="alert('Hello world!')">Sub</button>
            <form  action="{{ path('edit', {'id':c.id}) }}" method= "POST">
            <th><input type="submit" value="Edit" name={{c.id}}></th>
            </form>          
            <form  action="{{ path('delete',{'id':c.id}) }}" method= "POST">
            <th><input type="submit" value="Delete" name="{{c.id}}"></th>
            </form>
        </tr>
    {% endfor %}
  
</table>

</body>
</html>
